---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<Container>
  <header class="flex flex-col lg:flex-row items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-48 items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">MOHAMED</span><span
            class="text-slate-500">FAYIS</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 lg:flex-1 lg:justify-center">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
            <li>
              <a
                href={'/'}
                class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                About
              </a>
            </li>
            <li>
              <a
                href={'/projects'}
                class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                Projects
              </a>
            </li>
            <li>
              <a
                href={'/blog'}
                class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                Blog
              </a>
            </li>
            <li>
              <a
                href={'/contact'}
                class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                Contact
              </a>
            </li>
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#" size="md" block>Resume</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex lg:w-48 lg:justify-end items-center gap-4">
        <!-- <a href="#">Log in</a> -->
        <Link href="/mohamed-fayis-resume.pdf" target="_blank" size="md">Resume</Link>
      </div>
    </div>
  </header>
</Container>
