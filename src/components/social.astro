---
import Link from "./ui/link.astro";
import { Icon } from "astro-icon";
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tight">
    Social media profile
  </h2>
  <p class="text-slate-400 mt-4 text-lg md:text-xl">
    Find my social media profiles
  </p>
  <div class="flex mt-6 flex-wrap justify-center">
    <Link href="#">
      <Icon class="h-8 md:h-10" name="simple-icons:github" />
    </Link>
    <Link href="#">
      <Icon class="h-8 md:h-10" name="simple-icons:linkedin" />
    </Link>
    <Link href="#">
      <Icon class="h-8 md:h-10" name="simple-icons:instagram" />
    </Link>
    <Link href="#">
      <Icon class="h-8 md:h-10" name="simple-icons:facebook" />
    </Link>
    <Link href="#">
      <Icon class="h-8 md:h-10" name="simple-icons:twitter" />
    </Link>
    <Link href="#">
      <Icon class="h-8 md:h-10" name="simple-icons:whatsapp" />
    </Link>
  </div>
</div>
